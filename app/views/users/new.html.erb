<h1>Sign Up Page</h1>
<%= form_for @user, url: users_path, method: :post do |f| %>
  <div>
    <%= label :user, :email, 'Email', :class => 'col-form-label' %>
    <%= f.text_field :email, class: "form-control", placeholder: "" %>
  </div>
  <div>
    <%= label :user, :password, 'Password', :class => 'col-form-label' %>
    <%= f.password_field :password, class: "form-control", placeholder: "" %>
  </div>
  <div>
    <%= label :user, :first_name, 'First Name', :class => 'col-form-label' %>
    <%= f.text_field :first_name, class: "form-control", placeholder: "" %>
  </div>
  <%= f.submit "Sign Up", class: "btn btn-primary" %>
<% end -%>

<div><%= flash[:notice] %></div>