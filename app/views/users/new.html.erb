<div id="sign-up"  class="card card-container">
  <h1 class="well">Registration</h1>
  <div class="well">
    <div class="row">
      <%= form_for @user, url: users_path, method: :post, html: {class: 'form-user' } do |f| %>
        <div class="col-sm-12">
          <div class="row">
            <div class="col-sm-12 form-group">
              <%= label :user, :username, 'Username*' %>
              <%= f.text_field :username, type: 'text', class: "form-control", placeholder: '', required:true, autofocus:true %>
            </div>
<!--            <div class="col-sm-4 form-group">-->
              <%#= label :user, :middle_name, 'Middle Name' %>
              <%#= f.text_field :middle_name, type: 'text', class: "form-control", placeholder: '' %>
<!--            </div>-->
<!--            <div class="col-sm-4 form-group">-->
              <%#= label :user, :last_name, 'Last Name' %>
              <%#= f.text_field :last_name, type: 'text', class: "form-control", placeholder: '' %>
<!--            </div>-->
          </div>
          <div class="form-group">
            <%= label :user, :email, 'Columbia Email Address*' %>
            <%= f.text_field :email, type: 'text', class: "form-control", placeholder: '', required:true %>
          </div>
          <div class="form-group">
            <%= label :user, :password, 'Password*' %>
            <%= f.password_field :password, type: 'password', class: "form-control", placeholder: "", required:true %>
          </div>
          <%= f.button "Sign Up", type: 'submit', class: "btn btn-primary btn-signup" %>
        </div>
      <% end -%>
    </div>
  </div>
</div>


